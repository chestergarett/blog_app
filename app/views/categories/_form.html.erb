<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 rounded", local:true)do  |f| %>
        <% if logged_in?%>
          <div class="form-group row user-form">
            <%= f.label :name, "Category name", class: "col-2 col-form-label mr-3", placeholder: "Title" %>
            <div class="col-7">
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>
            </div>
          </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-success btn-sm" %>
        </div>
      <%end%>
    <%end%>
    </div>
  </div>
</div>