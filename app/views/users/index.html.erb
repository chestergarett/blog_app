<div class="show-profile">
  <div class="profile-details">
      <%=render 'articles/sidebar'%>
  </div>
  <div class="article-details">
    <h3 class="text-center mt-4">Users</h3>

    <div class="flickr_pagination">
        <%= will_paginate @users, :container => false %>
    </div>

    <div class="container">
      <% @users.each do |user| %>
        <div class="row justify-content-md-center">
          <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
              <div class="card-header font-italic custom-headers">
                <%= link_to user.username, user %>
                <span>
                  <% if logged_in?%> 
                    <% if user == current_user %>
                      <%= link_to fa_icon('edit'), edit_user_path(user), class: "btn btn-outline-info" %>
                    <%end%>
                    <% if current_user.admin? %>
                      <%= link_to fa_icon('trash'), user_path(user), class: "btn btn-outline-danger", method: :delete, 
                      data: {confirm: "Are you sure you want to delete the user account and all associated articles?"}%>
                    <%end%>
                  <%end%>
                </span>
              </div>
              <div class="card-body">
                <p class="card-text">
                    <%= pluralize(user.articles.count, "article") %>
                </p>
              </div>
              <div class="card-footer text-muted">
                <small>Joined <%= time_ago_in_words(user.created_at)%> ago
                </small>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="flickr_pagination mb4">
        <%= will_paginate @users, :container => false %>
      </div>
    </div>
  </div>
</div>