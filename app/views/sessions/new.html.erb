
<div class="new-container">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-5">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 rounded new-form", local:true)do  |f| %>
          <h3 class="text-center mt-2 mb-3">Sign in to Gitbug </h3>
          
          <div class="form-group row">
            <%= f.label :email,class: "col-2 col-form-label text-light" %>
            <div class="col-8">
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Email" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password,class: "col-2 col-form-label text-light" %>
            <div class="col-8">
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Password" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit "Login", class: "btn btn-success btn-sm" %>
          </div>
        <%end%>
        <div class="row justify-content-center">
          New to Gitbug?&nbsp;<%= link_to "Create an account.", signup_path%>
        </div>
      </div>
    </div>
  </div>
</div>